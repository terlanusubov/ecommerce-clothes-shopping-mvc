@{
    ViewData["Title"] = "OTP təsdiqlə";
}
@model int

<section class="forget-password-page account">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="block text-center">
                    <a class="logo" href="index.html">
                        <img src="images/logo.png" alt="">
                    </a>
                    <h2 class="text-center">OTP approve</h2>
                    <form method="post" action="@Url.Action("ApproveOTP","Account")" class="text-left clearfix">
                        <p>Please enter the OTP which we have sent it to your email address.</p>
                        <div class="form-group">
                            <input value="@Model" name="otpFromEmail" type="text" class="form-control" id="otp" placeholder="One time passcode">
                            @Html.ValidationSummary(true)
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-main text-center">Approve</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>



