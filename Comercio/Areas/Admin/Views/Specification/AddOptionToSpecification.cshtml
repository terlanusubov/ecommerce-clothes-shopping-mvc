@model SpecificationOptionAddVm
<form method="post" action="@Url.Action("AddOptionToSpecification","Specification")">
    <div class="form-row mb-4">
        <div class="form-group col-md-6">
            <label for="optionGroups">Xüsusiyyətlər</label>
            <select id="optionGroups" name="SpecificationOption.OptionGroupId" class="form-control">
                @foreach (var optionGroup in Model.OptionGroups)
                {
                    <option value="@optionGroup.OptionGroupId">
                        @optionGroup.Name
                    </option>
                }
            </select>
        </div>
        <div class="form-group col-md-6">
            <label for="name">Ad</label>
            <input name="SpecificationOption.Name" type="text" class="form-control" id="name" placeholder="Ad">
        </div>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Yadda Saxla</button>
</form>

